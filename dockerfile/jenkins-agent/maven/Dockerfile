# There is no official Alpine images at the moment.
# Needs upgrade when/if there is an official alpine image.
FROM liaocs559/jenkins-agent:4.7-1-jdk8-centos7.5

ARG user_jenkins=jenkins
ARG user_root=root

ADD apache-maven-3.6.1-bin.tar  /usr/local/

USER ${user_root}
# 添加时区环境变量，亚洲，上海
ENV TimeZone=Asia/Shanghai
# 使用软连接，并且将时区配置覆盖/etc/timezone
RUN ln -snf /usr/share/zoneinfo/$TimeZone /etc/localtime && echo $TimeZone > /etc/timezone
USER ${user_jenkins}

ENV MAVEN_HOME /usr/local/apache-maven-3.6.1
ENV PATH $PATH:$MAVEN_HOME/bin
CMD <mvn -v>